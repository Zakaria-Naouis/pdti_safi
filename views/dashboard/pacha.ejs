<div class="row mt-4 mb-5">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <!-- MODIFICATION 1: Remplacer le gradient par bg-primary pour avoir la même couleur que "Statistiques Globales" -->
      <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-project-diagram me-2"></i>Axes de Projets
          </h5>
          <span class="badge bg-light text-dark">
            <%= hierarchicalStats.axes.length %> axes
          </span>
        </div>
      </div>
      <div class="card-body p-4">
        <div class="row g-4">
          <% 
          hierarchicalStats.axes.forEach(function(axe, axeCardIndex) { 
            // Réutiliser le même mapping de couleurs
            let axeColor = '#666666';
            let axeColorLight = '#f8f8f8';
            
            const axeColorMap = {
              'Investissements et emplois': { main: '#BF9000', light: '#FFF8E7' },
              'Renforcement et amélioration des services sociaux de base : Education': { main: '#DD6615', light: '#FFE8D6' },
              'Renforcement des services sociaux de base : Santé': { main: '#385623', light: '#E8F0E0' },
              'Infrastructures de base et mise à niveau': { main: '#595959', light: '#F0F0F0' },
              'Gestion Proactive et durable des ressources en eau': { main: '#002060', light: '#E6E6F0' }
            };
            
            for (const [axeName, colors] of Object.entries(axeColorMap)) {
              if (axe.axe_libelle && axe.axe_libelle.includes(axeName.split(':')[0])) {
                axeColor = colors.main;
                axeColorLight = colors.light;
                break;
              }
            }
            
            // MODIFICATION 3: Filtrer ET TRIER les projets par axe_id et num_projet
            const axeProjectsList = axeProjects
              .filter(p => p.axe_id === axe.axe_id)
              .sort((a, b) => {
                // Tri par num_projet (numérique si possible, sinon alphabétique)
                const numA = parseInt(a.num_projet) || a.num_projet;
                const numB = parseInt(b.num_projet) || b.num_projet;
                if (typeof numA === 'number' && typeof numB === 'number') {
                  return numA - numB;
                }
                return String(a.num_projet).localeCompare(String(b.num_projet));
              });
          %>
          <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm" style="border-left: 5px solid <%= axeColor %> !important;">
              <div class="card-header" style="background-color: <%= axeColorLight %>; border-bottom: 2px solid <%= axeColor %>;">
                <div class="d-flex justify-content-between align-items-start">
                  <h6 class="mb-0 fw-bold" style="color: <%= axeColor %>;">
                    <i class="fas fa-arrow-right me-2"></i>Axe <%= axe.axe_id %>
                  </h6>
                  <span class="badge rounded-pill" style="background-color: <%= axeColor %>;">
                    <%= axeProjectsList.length %> projets
                  </span>
                </div>
                <p class="mb-0 mt-2" style="color: <%= axeColor %>; font-size: 0.95rem;">
                  <%= axe.axe_libelle %>
                </p>
              </div>
              <div class="card-body">
                <div class="row g-2 mb-3">
                  <div class="col-6">
                    <div class="d-flex align-items-center p-2 rounded" style="background-color: <%= axeColorLight %>;">
                      <i class="fas fa-dollar-sign me-2" style="color: <%= axeColor %>;"></i>
                      <div>
                        <small class="d-block text-muted">Investissement</small>
                        <strong style="color: <%= axeColor %>; font-size: 0.9rem;">
                          <%= parseFloat(axe.stats.cout_total_mdh).toLocaleString('fr-FR') %> MDH
                        </strong>
                      </div>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="d-flex align-items-center p-2 rounded" style="background-color: <%= axeColorLight %>;">
                      <i class="fas fa-briefcase me-2" style="color: <%= axeColor %>;"></i>
                      <div>
                        <small class="d-block text-muted">Emplois</small>
                        <strong style="color: <%= axeColor %>; font-size: 0.9rem;">
                          <%= parseInt(axe.stats.total_emplois_directs).toLocaleString('fr-FR') %>
                        </strong>
                      </div>
                    </div>
                  </div>
                </div>

                <% if (axeProjectsList.length > 0) { %>
                <div class="mb-3">
                  <h6 class="text-muted mb-2" style="font-size: 0.85rem;">
                    <i class="fas fa-list-ul me-1"></i>Projets de l'axe:
                  </h6>
                  <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                    <% axeProjectsList.forEach(function(project) { %>
                    <a href="/projects/view/<%= project.id %>?fromPacha=true" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start p-2" style="border-left: 3px solid <%= axeColor %>;">
                      <div class="me-auto">
                        <div class="fw-bold" style="font-size: 0.85rem; color: <%= axeColor %>;">
                          <%= project.num_projet %>
                        </div>
                        <small class="text-muted" style="font-size: 0.75rem;">
                          <%= project.intitule.substring(0, 60) %><%= project.intitule.length > 60 ? '...' : '' %>
                        </small>
                        <div class="mt-1">
                          <span class="badge badge-sm" style="background-color: <%= axeColor %>; font-size: 0.7rem;">
                            <%= project.lib_secteur %>
                          </span>
                        </div>
                      </div>
                      <div class="text-end ms-2">
                        <small class="d-block text-success fw-bold" style="font-size: 0.75rem;">
                          <%= parseFloat(project.cout_total_mdh || 0).toLocaleString('fr-FR') %> MDH
                        </small>
                        <small class="d-block text-info" style="font-size: 0.7rem;">
                          <%= parseInt(project.nbr_emplois_directs || 0).toLocaleString('fr-FR') %> emplois
                        </small>
                      </div>
                    </a>
                    <% }); %>
                  </div>
                </div>

                <div class="d-grid">
                  <button class="btn btn-sm" style="background-color: <%= axeColor %>; color: white;" onclick="window.location.href='/projects?axe_id=<%= axe.axe_id %>'">
                    <i class="fas fa-eye me-1"></i>Voir tous les projets
                  </button>
                </div>
                <% } else { %>
                <p class="text-muted text-center mb-0" style="font-size: 0.85rem;">
                  <i class="fas fa-info-circle me-1"></i>Aucun projet dans cet axe
                </p>
                <% } %>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>

