<style>
  /* Styles additionnels */
  .accordion-button:not(.collapsed) {
    box-shadow: none;
  }

  .accordion-button:focus {
    box-shadow: none;
    border-color: transparent;
  }

  .list-group-item-action:hover {
    background-color: rgba(0, 0, 0, 0.03);
    transform: translateX(3px);
    transition: all 0.2s ease;
  }

  .badge {
    font-weight: 500;
  }

  .table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
  }

  .card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
  }

  .cursor-pointer {
    cursor: pointer;
  }

  .secteur-row:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }
</style>

<script>
  // Initialisation
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Dashboard Pacha chargé avec <%= hierarchicalStats.axes.length %> axes');

    // Gestion des chevrons pour les secteurs
    document.querySelectorAll('.secteur-row').forEach(function(row) {
      row.addEventListener('click', function() {
        const icon = this.querySelector('.fa-chevron-right, .fa-chevron-down');
        if (icon) {
          if (icon.classList.contains('fa-chevron-right')) {
            icon.classList.remove('fa-chevron-right');
            icon.classList.add('fa-chevron-down');
          } else {
            icon.classList.remove('fa-chevron-down');
            icon.classList.add('fa-chevron-right');
          }
        }
      });
    });
  });
</script>