<%- include('../partials/header', { title: title }) %>


<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2><%= pageTitle %></h2>
    </div>
  </div>

  <!-- Messages flash -->
  <% if (typeof successMessage !== 'undefined' && successMessage) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-2"></i><%= successMessage %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-triangle me-2"></i><%= errorMessage %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Statistiques rapides (optionnel) -->
  <% if (typeof instructionStats !== 'undefined' && instructionStats) { %>
  <div class="row mb-3">
    <div class="col-md-3">
      <div class="card bg-primary text-white text-center">
        <div class="card-body py-3">
          <h5>Total</h5>
          <h3><%= instructionStats.total %></h3>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-success text-white text-center">
        <div class="card-body py-3">
          <h5>Exécutées</h5>
          <h3><%= instructionStats.executed %></h3>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-warning text-white text-center">
        <div class="card-body py-3">
          <h5>En cours</h5>
          <h3><%= instructionStats.in_progress %></h3>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-danger text-white text-center">
        <div class="card-body py-3">
          <h5>En retard</h5>
          <h3><%= instructionStats.overdue %></h3>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <div>
        <% if (user.profile_id === 1 || user.profile_id === 2 || user.profile_id === 3) { %>
        <a href="/instructions/add" class="btn btn-primary">
          <i class="fas fa-plus me-1"></i>Ajouter une instruction
        </a>
        <% } %>
      </div>

      <!-- Filtres simples -->
      <div class="d-flex gap-2">
        <input type="text" id="search-input" class="form-control" placeholder="Rechercher..." style="width: 200px;">
        <select id="status-filter" class="form-select" style="width: 150px;">
          <option value="">Tous les statuts</option>
          <option value="Exécuté">Exécutées</option>
          <option value="En Cours">En cours</option>
          <option value="En Retard">En retard</option>
        </select>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover" id="instructions-table">
              <thead>
                <tr>
                  <th>Numéro</th>
                  <th>Date</th>
                  <th>Sujet</th>
                  <th>Émetteur</th>
                  <th>Destinataire</th>
                  <th>Date Limite</th>
                  <th>Statut</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (instructions && instructions.length > 0) { %>
                <% instructions.forEach(function(instruction) { %>
                <tr class="instruction-row" data-status="<%= instruction.lib_statut %>">
                  <td>
                    <span class="fw-bold text-primary"><%= instruction.num_instruction %></span>
                  </td>
                  <td>
                    <small><%= new Date(instruction.date_instruction).toLocaleDateString('fr-FR') %></small>
                  </td>
                  <td>
                    <div style="max-width: 300px;" class="text-truncate" title="<%= instruction.sujet %>">
                      <%= instruction.sujet %>
                    </div>
                  </td>
                  <td><%= instruction.emetteur_nom %> <%= instruction.emetteur_prenom %></td>
                  <td><%= instruction.destinataire_nom %> <%= instruction.destinataire_prenom %></td>
                  <td>
                    <span class="<%= new Date(instruction.date_limite) < new Date() && instruction.lib_statut !== 'Exécuté' ? 'text-danger fw-bold' : '' %>">
                      <%= new Date(instruction.date_limite).toLocaleDateString('fr-FR') %>
                    </span>
                  </td>
                  <td>
                    <% if (instruction.lib_statut === 'Exécuté') { %>
                    <span class="badge bg-success">
                      <i class="fas fa-check me-1"></i>Exécuté
                    </span>
                    <% } else if (instruction.lib_statut === 'En Cours') { %>
                    <span class="badge bg-warning">
                      <i class="fas fa-clock me-1"></i>En Cours
                    </span>
                    <% } else { %>
                    <span class="badge bg-danger">
                      <i class="fas fa-exclamation-triangle me-1"></i>En Retard
                    </span>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group btn-group-sm" role="group">
                      <!-- Bouton voir pour tous -->
                      <a href="/instructions/view/<%= instruction.id %>" class="btn btn-outline-info btn-sm" title="Voir les détails">
                        <i class="fas fa-eye"></i>
                      </a>

                      <!-- Boutons pour l'émetteur (modification/suppression) -->
                      <% if (instruction.emetteur_id === user.id && instruction.lib_statut !== 'Exécuté') { %>
                      <a href="/instructions/edit/<%= instruction.id %>" class="btn btn-outline-primary btn-sm" title="Modifier">
                        <i class="fas fa-edit"></i>
                      </a>
                      <button class="btn btn-outline-danger btn-sm btn-delete" data-id="<%= instruction.id %>" data-title="<%= instruction.sujet %>" title="Supprimer">
                        <i class="fas fa-trash"></i>
                      </button>
                      <% } %>

                      <!-- Bouton pour le destinataire (marquer comme exécuté) -->
                      <% if (user.profile_id === 4 && instruction.destinataire_id === user.id && instruction.lib_statut !== 'Exécuté') { %>
                      <button class="btn btn-outline-success btn-sm btn-execute" data-id="<%= instruction.id %>" title="Marquer comme exécuté">
                        <i class="fas fa-check"></i>
                      </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="8" class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3 text-muted">Aucune instruction trouvée</p>
                    <% if (user.profile_id === 1 || user.profile_id === 2 || user.profile_id === 3) { %>
                    <a href="/instructions/add" class="btn btn-primary">
                      <i class="fas fa-plus me-1"></i>Créer votre première instruction
                    </a>
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">
          <i class="fas fa-exclamation-triangle me-2"></i>Confirmer la suppression
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Êtes-vous sûr de vouloir supprimer cette instruction ?</p>
        <div class="alert alert-warning">
          <strong id="instruction-title"></strong>
        </div>
        <p class="text-danger">
          <i class="fas fa-warning me-1"></i>Cette action est irréversible.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-danger" id="confirm-delete">
          <i class="fas fa-trash me-1"></i>Supprimer
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Variables globales
    let instructionIdToDelete = null;
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

    // Recherche en temps réel
    const searchInput = document.getElementById('search-input');
    const statusFilter = document.getElementById('status-filter');

    searchInput.addEventListener('input', filterTable);
    statusFilter.addEventListener('change', filterTable);

    function filterTable() {
      const searchTerm = searchInput.value.toLowerCase();
      const statusFilter_value = statusFilter.value;
      const rows = document.querySelectorAll('.instruction-row');

      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        const status = row.dataset.status;

        const matchesSearch = text.includes(searchTerm);
        const matchesStatus = !statusFilter_value || status === statusFilter_value;

        row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
      });
    }

    // Gestion des boutons de suppression
    document.addEventListener('click', function(e) {
      if (e.target.closest('.btn-delete')) {
        const button = e.target.closest('.btn-delete');
        instructionIdToDelete = button.dataset.id;
        const instructionTitle = button.dataset.title;

        document.getElementById('instruction-title').textContent = instructionTitle;
        deleteModal.show();
      }

      // Gestion des boutons d'exécution
      if (e.target.closest('.btn-execute')) {
        const button = e.target.closest('.btn-execute');
        const instructionId = button.dataset.id;

        if (confirm('Êtes-vous sûr de vouloir marquer cette instruction comme exécutée ?')) {
          executeInstruction(instructionId);
        }
      }
    });

    // Confirmation de suppression
    document.getElementById('confirm-delete').addEventListener('click', function() {
      if (instructionIdToDelete) {
        deleteInstruction(instructionIdToDelete);
      }
    });

    // Fonction pour supprimer une instruction
    function deleteInstruction(instructionId) {
      fetch(`/instructions/delete/${instructionId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            deleteModal.hide();
            // Supprimer la ligne du tableau
            const row = document.querySelector(`button[data-id="${instructionId}"]`)?.closest('tr');
            if (row) {
              row.remove();
            }
            showAlert('Instruction supprimée avec succès', 'success');
          } else {
            showAlert('Erreur: ' + data.message, 'danger');
          }
        })
        .catch(error => {
          console.error('Erreur:', error);
          showAlert('Une erreur est survenue lors de la suppression', 'danger');
        });
    }

    // Fonction pour marquer comme exécutée
    function executeInstruction(instructionId) {
      fetch(`/instructions/execute/${instructionId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            showAlert('Instruction marquée comme exécutée avec succès', 'success');
            setTimeout(() => {
              window.location.reload();
            }, 1500);
          } else {
            showAlert('Erreur: ' + data.message, 'danger');
          }
        })
        .catch(error => {
          console.error('Erreur:', error);
          showAlert('Une erreur est survenue', 'danger');
        });
    }

    // Fonction pour afficher des alertes
    function showAlert(message, type) {
      const alertDiv = document.createElement('div');
      alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
      alertDiv.innerHTML = `
      <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;

      const container = document.querySelector('.container');
      container.insertBefore(alertDiv, container.firstChild.nextSibling);

      // Auto-remove after 5 seconds
      setTimeout(() => {
        if (alertDiv.parentNode) {
          alertDiv.remove();
        }
      }, 5000);
    }
  });
</script>

<style>
  .text-truncate {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
  }

  .btn-group-sm>.btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
  }
</style>

<%- include('../partials/footer') %>