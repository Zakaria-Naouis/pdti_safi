<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - <%= app_name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">

  <!-- Empêcher le cache du navigateur -->
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
</head>

<body>
  <% if (typeof hideNavbar === 'undefined' || !hideNavbar) { %>
  <%- include('partials/navbar') %>
  <% } %>

  <main class="<%= (typeof hideNavbar !== 'undefined' && hideNavbar) ? '' : 'container py-4' %>">
    <%- body %>
  </main>

  <% if (typeof hideNavbar === 'undefined' || !hideNavbar) { %>
  <footer class="bg-light text-center py-3 mt-5">
    <div class="container">
      <p class="mb-0">&copy; 2025 <%= company_name %> - Ministère de l'Intérieur</p>
    </div>
  </footer>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>

  <!-- Script pour empêcher l'accès aux pages via back après déconnexion -->
  <script>
    (function() {
      // Empêcher le cache du navigateur
      window.history.forward();

      function noBack() {
        window.history.forward();
      }

      window.onload = noBack;
      window.onpageshow = function(evt) {
        if (evt.persisted) noBack();
      };
      window.onunload = function() {
        void(0);
      };

      // Vérifier périodiquement si l'utilisateur est toujours connecté
      <% if (user) { %>
      setInterval(function() {
        fetch('/api/check-auth', {
          method: 'GET',
          credentials: 'include'
        }).then(response => {
          if (!response.ok) {
            window.location.href = '/login';
          }
        }).catch(() => {
          window.location.href = '/login';
        });
      }, 60000); // Vérifier toutes les minutes
      <% } %>
    })();
  </script>
</body>

</html>